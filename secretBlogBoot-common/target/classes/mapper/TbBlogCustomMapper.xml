<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.chenc.blog.business.mapper.TbBlogCustomMapper">
    <select id="getBlogListById" parameterType="long" resultMap="getBlogCustomById">
        SELECT *
        FROM
        tb_blog
        WHERE id=#{id}
    </select>
    <resultMap id="getBlogCustomById" type="cn.chenc.blog.business.entity.TbBlogCustom">
        <id column="id" property="id"></id>
        <result column="title" property="title"></result>
        <result column="image_url" property="imageUrl"></result>
        <result column="summaay" property="summary"></result>
        <result column="create_time" property="createTime"></result>
        <result column="update_time" property="updateTime"></result>
        <result column="blog_desc" property="blogDesc"></result>
        <collection column="create_time" property="preBlog" javaType="cn.chenc.blog.business.entity.TbBlog" select="cn.chenc.blog.business.mapper.TbBlogCustomMapper.getPreBlogByTime"></collection>
        <collection column="create_time" property="nextBlog" javaType="cn.chenc.blog.business.entity.TbBlog" select="cn.chenc.blog.business.mapper.TbBlogCustomMapper.getNextBlogByTime"></collection>

    </resultMap>
    <select id="getNewBlogTitle" resultType="cn.chenc.blog.business.entity.TbBlog">
        select id,title,create_time createTime from tb_blog order by create_time desc
    </select>
    <select id="getBlogListByCatId" parameterType="long" resultType="cn.chenc.blog.business.entity.TbBlog">
        select id,title,summary,create_time createTime,update_time updateTime,
        blog_desc blogDesc,blog_cat_id blogCatId
        from tb_blog where blog_cat_id=#{catId} order by create_time desc
    </select>
    <select id="getPreBlogByTime" parameterType="java.util.Date" resultType="cn.chenc.blog.business.entity.TbBlog">
        select id,title from tb_blog where create_time &gt; #{createTime} ORDER BY create_time DESC LIMIT 1
    </select>
    <select id="getNextBlogByTime" parameterType="java.util.Date" resultType="cn.chenc.blog.business.entity.TbBlog">
        select id,title from tb_blog where create_time &lt; #{createTime} ORDER BY create_time DESC LIMIT 1
    </select>
</mapper>
